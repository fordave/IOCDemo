<Window x:Class="WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>         
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="串口"  VerticalAlignment="Center" Margin="10"></TextBlock>
            <ComboBox Width="80" VerticalAlignment="Center" Margin="10"></ComboBox>
            <Button Content="开始采集" VerticalAlignment="Center" Margin="10"></Button>
            <Button Content="停止采集" VerticalAlignment="Center" Margin="10"></Button>
        </StackPanel>
        <TabControl Grid.Row="1" Background="WhiteSmoke">
            <TabItem x:Name="tab1">
             
            </TabItem>
           
        </TabControl>
        
    </Grid>
</Window>
